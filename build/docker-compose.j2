version: "3.8"

services:
  wireguard-ui:
    image: ngoduykhanh/wireguard-ui:latest
    privileged: true
    cap_add:
      - NET_ADMIN
      - NET_RAW
    volumes:
      - ./wireguard-ui/db:/app/db
      - ./wireguard-ui/config:/etc/wireguard
    restart: unless-stopped
    environment:
      WGUI_SERVER_INTERFACE_ADDRESSES: "{{WG_SUB_NETWORK}}"
      WGUI_SERVER_POST_UP_SCRIPT: "{{ WG_UP_SCRIPT }}"
      WGUI_SERVER_POST_DOWN_SCRIPT: "{{ WG_DOWN_SCRIPT }}"
      WGUI_MANAGE_START: true
      WGUI_MANAGE_RESTART: true
      WGUI_FIREWALL_MARK: ""
      WGUI_DNS: "{{ INTERNAL_PIHOLE_IP }}"
    ports:
      - "51820:51820/udp"
      - "8080:5000"
    networks:
      net:
        ipv4_address: {{ INTERNAL_WG_IP }}
  pi-hole:
    image: vpn-pack-pihole:latest
    privileged: true
    cap_add:
      - NET_ADMIN
      - NET_RAW
    volumes:
      - ./pi-hole/etc:/etc/pihole
      - ./pi-hole/dnsmasq.d:/etc/dnsmasq.d
      - ./pi-hole/wg0.conf:/etc/wireguard/wg0.conf
    restart: unless-stopped
    environment:
      WEBPASSWORD: "{{ PIHOLE_PASSWORD }}"
    ports:
      - "53:53/udp"
      - "53:53/tcp"
      - "8090:80"
    networks:
      net:
        ipv4_address: {{ INTERNAL_PIHOLE_IP }}
